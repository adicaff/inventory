source 'https://rubygems.org'

gem 'rails', '4.1.6'

gem 'sqlite3'
gem 'sass-rails', '~> 4.0.4'                     # Use SCSS for stylesheets
gem 'uglifier', '>= 1.3.0'                       # Use Uglifier as compressor for JavaScript assets
gem 'coffee-rails', '~> 4.0.0'                   # Use CoffeeScript for .js.coffee assets and views
gem 'jquery-rails'                               # Use jquery as the JavaScript library
gem 'turbolinks'                                 # Turbolinks makes following links in your web application faster.
gem 'jbuilder', '~> 2.0'                         # Build JSON APIs with ease.
gem 'sdoc', '~> 0.4.0',  group: :doc             # bundle exec rake doc:rails generates the API under doc/api.


gem 'spring',      group: :development           # Spring speeds up development.
gem 'oauth'                                      # For Authorize user flow.
gem 'rspec-rails'                                # Rspec for rails.
gem 'haml'                                       # Language for views.
gem 'open_uri_redirections'                      # Process the redirections for links
gem 'metainspector'                              # Extract URL from text
gem 'rspec-html-matchers'                        # For testing html tags

gem 'ask_twitter', github: 'adicaff/ask_twitter' # Ask_twitter gem