.text-center
  %h1
    = t('application.login')
  = form_for(resource, html: { class: 'form-horizontal' },
              as: resource_name, url: session_path(resource_name)) do |f|
    %fieldset
      .form-group
        .col-lg-offset-3
          = f.label :email, class: 'col-lg-2 control-label'
        .col-lg-4
          = f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('application.email')

      .form-group
        .col-lg-offset-3
          = f.label :password, class: 'col-lg-2 control-label'
        .col-lg-4
          = f.password_field :password, autocomplete: 'off',
          class: 'form-control', placeholder: t('application.password')

      - if devise_mapping.rememberable?
        .form-group
          = f.check_box :remember_me
          = f.label :remember_me
      .form-group
        .actions
          = f.submit t('application.login'), name: t('application.commit'), class: 'btn btn-warning'

  = render 'devise/shared/links'