= form_for(@item, html: { class: 'form-horizontal', multipart: true }) do |f|
  %fieldset
    .form-group
      .col-lg-offset-3
        = f.label :name, class: 'col-lg-2 control-label'
      .col-lg-4
        = f.text_field :name, autofocus: true, class: 'form-control', placeholder: t('.name')

    .form-group
      .col-lg-offset-3
        = f.label :description, class: 'col-lg-2 control-label'
      .col-lg-4
        = f.text_field :description, class: 'col-lg-5 form-control', placeholder: t('.description')

    .form-group
      .col-lg-offset-3
        = f.label :ubication, class: 'col-lg-2 control-label'
      .col-lg-4
        = f.text_field :ubication, class: 'col-lg-5 form-control', placeholder: t('.ubication')

    .form-group
      .col-lg-offset-3
        = f.label :image, class: 'col-lg-2 control-label'
      .col-lg-4
        = file_field_tag t('.item_avatar')

    .form-group
      = f.hidden_field :lock_version

    .form-group
      .actions
        = f.submit class: 'btn btn-warning'